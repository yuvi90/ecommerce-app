{
  "compilerOptions": {
    /* Modules Config */
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",

    /* Rules */
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,

    /* Paths Alias */
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@config/*": ["./config/*"]
    }
  },

  /* Files to Include */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
