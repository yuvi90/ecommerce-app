{
  "compilerOptions": {
    /* Modules Config */
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",

    /* Rules */
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true

    /* Paths Alias */
    // "baseUrl": ".",
    // "paths": {}
  },

  /* Files to Include */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
